{
    "name": "my-app",
    "productName": "my-app",
    "version": "1.0.0",
    "description": "my app description",
    "main": ".webpack/main",
    "scripts": {
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "lint": "eslint --ext .ts ."
    },
    "keywords": [],
    "homepage": "https://github.com/LukasWass/electron-forge-react-boilerplate/#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/LukasWass/electron-forge-react-boilerplate.git"
    },
    "license": "WTFPL",
    "author": {
        "name": "Lukas Wass",
        "email": "dev@lukaswass.se"
    },
    "contributors": [
        {
            "name": "Albin Axtelius",
            "email": "albin@axtelius.se",
            "url": "https://github.com/albinaxtelius"
        }
    ],
    "config": {
        "forge": {
            "packagerConfig": {},
            "makers": [{
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "my-app",
                        "certificateFile": "",
                        "certificatePassword": ""
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ],
            "plugins": [
                [
                    "@electron-forge/plugin-webpack",
                    {
                        "mainConfig": "./webpack.main.config.js",
                        "renderer": {
                            "config": "./webpack.renderer.config.js",
                            "entryPoints": [{
                                "html": "./src/renderer/index.html",
                                "js": "./src/renderer/index.tsx",
                                "name": "main_window"
                            }]
                        }
                    }
                ]
            ]
        }
    },
    "devDependencies": {
        "@electron-forge/cli": "^6.0.0-beta.54",
        "@electron-forge/maker-deb": "^6.0.0-beta.54",
        "@electron-forge/maker-rpm": "^6.0.0-beta.54",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
        "@electron-forge/maker-zip": "^6.0.0-beta.54",
        "@electron-forge/plugin-webpack": "^6.0.0-beta.54",
        "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
        "@typescript-eslint/eslint-plugin": "^4.8.2",
        "@typescript-eslint/parser": "^4.8.2",
        "css-loader": "^4.3.0",
        "electron": "11.0.3",
        "eslint": "^7.14.0",
        "eslint-plugin-import": "^2.22.1",
        "fork-ts-checker-webpack-plugin": "^5.2.1",
        "node-loader": "^1.0.2",
        "style-loader": "^1.3.0",
        "ts-loader": "^8.0.11",
        "typescript": "^4.1.2"
    },
    "dependencies": {
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "child_process": "^1.0.2",
        "electron-squirrel-startup": "^1.0.0",
        "path": "^0.12.7",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-hot-loader": "^4.13.0"
    }
}